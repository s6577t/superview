<script type="text/javascript" charset="utf-8">
  
  var RectsPage = function () {
    Object.extend(this).mixin(Superview.Page);
  }
  
  RectsPage.prototype = {
    render: function () {
      var box1 = new Superview().render().addTo(this);
      box1.resize({width: 300, height: 300}).$().css({
        backgroundColor: 'yellow',
        border: 'solid 5px red'
      });
      
      var box2 = new Superview().render().addTo(this);
      box2.resize({width: 300, height: 300}).moveTo({top: 450, left: 50}).$().css({
        backgroundColor: 'green',
        border: 'solid 5px blue'
      });;
      
      window.box1 = box1;
      window.box2 = box2;
      
      return this
    },
   bind( function () {
      return this.fitWindow();
    }
  }
  
  jQuery(function () {
    new RectsPage().initialize();
  })
</script>