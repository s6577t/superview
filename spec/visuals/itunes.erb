<script type="text/javascript" charset="utf-8">
  
  var ITunes = function () {
    extend(this).mixin(Superview.Page);
  }
  
  ITunes.prototype = {
    render: function () {
      var list = new Superview,
          box = new Superview,
          main = new Superview
      
      list.outerResize({
        width: 180
      }).z().css({
        backgroundColor: '#80FFB3'
      })
      
      list.anchor = function () {
        this.anchorToParent({
          left: true,
          top: true,
          height: '-180'
        })
      }
      
      box.outerResize({
        width: 180,
        height: 180
      }).z().css({
        backgroundColor: '#A040FF'
      })
      
      box.anchor = function () {
        this.anchorToParent({
          bottom: true,
          left: true
        })
      }
      
      main.z().css({
        backgroundColor: '#FF6060'
      })
      
      main.anchor = function () {
        this.anchorToParent({
          top: true,
          right: true,
          height: true,
          width: '-180'
        })
      }
      
      this.add(list, box, main);      
      return this
    },
    anchor: function () {
      return this.fitWindow();
    }
  }
  
  jQuery(function () {
    new ITunes().initialize();
  })
</script>