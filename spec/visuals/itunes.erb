<script type="text/javascript" charset="utf-8">
  
  var ITunes = function () {
    extend(this).mixin(Superview.Page);
  }
  
  ITunes.prototype = {
    render: function () {
      var list = new Superview,
          box = new Superview,
          main = new Superview
      
      list.outerResize({
        width: 100
      }).z().css({
        backgroundColor: '#80FFB3'
      })
      
      list.bind = function () {
        this.bindToParent({
          left: true,
          top: true,
          height: '-100'
        })
      }
      
      box.outerResize({
        width: 100,
        height: 100
      }).z().css({
        backgroundColor: '#A040FF'
      })
      
      box.bind = function () {
        this.bindToParent({
          bottom: true,
          left: true
        })
      }
      
      main.z().css({
        backgroundColor: '#FF6060'
      })
      
      main.bind = function () {
        this.bindToParent({
          top: true,
          right: true,
          height: true,
          width: '-100'
        })
      }
      
      this.add(list, box, main);      
      return this
    },
    bind: function () {
      return this.fitWindow();
    }
  }
  
  jQuery(function () {
    new ITunes().initialize();
  })
</script>