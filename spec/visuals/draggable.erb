<script type="text/javascript" charset="utf-8">
  
  var DraggableSpecPage = function () {
    extend(this).mixin(Superview.Page);
  }
  
  DraggableSpecPage.prototype = {
    render: function () {
      var container = new Superview().render().addTo(this);
      container.z().css({
        backgroundColor: '#3020FF'
      });
      container.anchor = function () {
        var self = this;
        this.anchorToParent({
          width: '-30',
          height: '-30',
          left: true,
          right: true,
          top: true,
          bottom: true
        })
      }
      this._container = container;
      
      var box = new Superview().render().addTo(container);
      box.resize({width: 200, height: 200}).moveTo({top: 30, left: 50});
      box.z().css({
        backgroundColor: 'yellow'
      })
      box.draggable()
      
      this._box = box;
      return this
    },
    anchor: function () {
      return this.fitWindow();
    }
  }
  
  jQuery(function () {
    new DraggableSpecPage().initialize();
  })
</script>