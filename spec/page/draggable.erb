<script type="text/javascript" charset="utf-8">
  
  var DraggableSpecPage = function () {
    extend(this).mixin(Superview.Page);
  }
  
  DraggableSpecPage.prototype = {
    render: function () {
      var box = new Superview().render().addTo(this);
      box.resize({width: 300, height: 300});
      box.z().css({
        backgroundColor: 'yellow'
      })
      box.draggable()
      this._box = box;
      return this
    },
    bind: function () {
      return this.fitWindow();
    }
  }
  
  jQuery(function () {
    new DraggableSpecPage().initialize();
  })
</script>